def get_mail() {
    node('master'){
        USER_MAIL = wrap([$class: 'BuildUser']) {
            return env.BUILD_USER_EMAIL
        }
    }
}

def USER_MAIL = get_mail()

node('master') {
   stage('Checkout') {
       deleteDir()
       git 'git@sometest.git'
    }

    stage('Deploy') {
        sh "sh depoly.sh"
    }
    step([$class: 'Mailer', notifyEveryUnstableBuild: true, recipients: USER_MAIL, sendToIndividuals: true])
}